<Window x:Class="EnglishLearnGame.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen - English Learning Game" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F0F8FF">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="⚙️ Einstellungen" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#2E8B57" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Konfiguriere deine Spielerfahrung" 
                       FontSize="16" 
                       Foreground="#4682B4" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" Margin="20,0,20,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Audio Settings -->
                <GroupBox Header="🔊 Audio-Einstellungen" 
                          FontWeight="Bold" 
                          FontSize="14" 
                          Margin="0,0,0,20"
                          Padding="10">
                    <StackPanel Margin="10">
                        <CheckBox Name="SoundEnabledCheckBox" 
                                  Content="Soundeffekte aktivieren" 
                                  FontSize="14" 
                                  IsChecked="True"
                                  Margin="0,5"/>
                        
                        <CheckBox Name="MusicEnabledCheckBox" 
                                  Content="Hintergrundmusik aktivieren" 
                                  FontSize="14" 
                                  IsChecked="True"
                                  Margin="0,5"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Lautstärke: " 
                                       FontSize="14" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <Slider Name="VolumeSlider" 
                                    Width="200" 
                                    Minimum="0" 
                                    Maximum="100" 
                                    Value="70" 
                                    VerticalAlignment="Center"/>
                            <TextBlock Name="VolumeLabel" 
                                       Text="70%" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Language Settings -->
                <GroupBox Header="🌍 Sprach-Einstellungen" 
                          FontWeight="Bold" 
                          FontSize="14" 
                          Margin="0,0,0,20"
                          Padding="10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Lernrichtung: " 
                                       FontSize="14" 
                                       VerticalAlignment="Center"
                                       Width="200"/>
                            <ComboBox Name="LanguageDirectionComboBox" 
                                      Width="200" 
                                      FontSize="14">
                                <ComboBoxItem Content="🇩🇪 Deutsch → 🇬🇧 Englisch" IsSelected="True"/>
                                <ComboBoxItem Content="🇬🇧 Englisch → 🇩🇪 Deutsch"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <TextBlock Text="Wähle die Richtung des Lernens. Deutsch → Englisch ist für deutsche Muttersprachler geeignet." 
                                   FontSize="12" 
                                   Foreground="#708090" 
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Game Settings -->
                <GroupBox Header="🎮 Spiel-Einstellungen" 
                          FontWeight="Bold" 
                          FontSize="14" 
                          Margin="0,0,0,20"
                          Padding="10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Standard-Schwierigkeitsgrad: " 
                                       FontSize="14" 
                                       VerticalAlignment="Center"
                                       Width="200"/>
                            <ComboBox Name="DifficultyComboBox" 
                                      Width="150" 
                                      FontSize="14">
                                <ComboBoxItem Content="A1 - Basic" IsSelected="True"/>
                                <ComboBoxItem Content="A2 - Elementary"/>
                                <ComboBoxItem Content="B1 - Intermediate"/>
                                <ComboBoxItem Content="B2 - Upper Intermediate"/>
                                <ComboBoxItem Content="C1 - Advanced"/>
                                <ComboBoxItem Content="C2 - Expert"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <CheckBox Name="AutoSaveCheckBox" 
                                  Content="Automatisches Speichern aktivieren" 
                                  FontSize="14" 
                                  IsChecked="True"
                                  Margin="0,10,0,5"/>
                        
                        <CheckBox Name="ShowHintsCheckBox" 
                                  Content="Hinweise anzeigen" 
                                  FontSize="14" 
                                  IsChecked="True"
                                  Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Display Settings -->
                <GroupBox Header="🖥️ Anzeige-Einstellungen" 
                          FontWeight="Bold" 
                          FontSize="14" 
                          Margin="0,0,0,20"
                          Padding="10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Fenstergröße: " 
                                       FontSize="14" 
                                       VerticalAlignment="Center"
                                       Width="200"/>
                            <ComboBox Name="WindowSizeComboBox" 
                                      Width="150" 
                                      FontSize="14">
                                <ComboBoxItem Content="Klein (800x600)" IsSelected="True"/>
                                <ComboBoxItem Content="Mittel (1024x768)"/>
                                <ComboBoxItem Content="Groß (1280x1024)"/>
                                <ComboBoxItem Content="Vollbild"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <CheckBox Name="FullScreenCheckBox" 
                                  Content="Vollbildmodus" 
                                  FontSize="14" 
                                  Margin="0,10,0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20,0,20,20">
            <Button Name="SaveButton" 
                    Content="💾 Speichern" 
                    Width="120" 
                    Height="40" 
                    FontSize="14" 
                    FontWeight="Bold"
                    Background="#32CD32" 
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#228B22"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Name="CancelButton" 
                    Content="❌ Abbrechen" 
                    Width="120" 
                    Height="40" 
                    FontSize="14" 
                    FontWeight="Bold"
                    Background="#DC143C" 
                    Foreground="White"
                    BorderThickness="0"
                    Click="CancelButton_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#B22222"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

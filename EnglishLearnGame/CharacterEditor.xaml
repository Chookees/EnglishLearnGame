<Window x:Class="EnglishLearnGame.CharacterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="Charakter-Editor - English Learning Game" 
                Height="700" 
                Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F8FF">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="ðŸ‘¤ Charakter-Editor" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#2E8B57" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Erstelle deinen eigenen Charakter fÃ¼r das Englisch-Lernspiel!" 
                       FontSize="16" 
                       Foreground="#4682B4" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Character Categories -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <GroupBox Header="ðŸŽ­ Charakter-Kategorien" 
                          FontWeight="Bold" 
                          FontSize="16" 
                          Padding="10">
                    <StackPanel>
                        <!-- Human Characters -->
                        <Expander Name="HumanExpander" 
                                  Header="ðŸ‘¤ Menschen" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"
                                  IsExpanded="True"
                                  Expanded="Expander_Expanded">
                            <StackPanel Name="HumanCarousel" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,10">
                                <!-- Human characters werden dynamisch geladen -->
                            </StackPanel>
                        </Expander>
                        
                        <!-- Hero Characters -->
                        <Expander Name="HeroExpander" 
                                  Header="ðŸ¦¸ Helden" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"
                                  IsExpanded="False"
                                  Expanded="Expander_Expanded">
                            <StackPanel Name="HeroCarousel" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,10">
                                <!-- Hero characters werden dynamisch geladen -->
                            </StackPanel>
                        </Expander>
                        
                        <!-- Monster Characters -->
                        <Expander Name="MonsterExpander" 
                                  Header="ðŸ‘¹ Monster" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"
                                  IsExpanded="False"
                                  Expanded="Expander_Expanded">
                            <StackPanel Name="MonsterCarousel" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,10">
                                <!-- Monster characters werden dynamisch geladen -->
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            
            <!-- Character Data Input -->
            <StackPanel Grid.Column="1">
                <GroupBox Header="ðŸ“ Charakter-Daten" 
                          FontWeight="Bold" 
                          FontSize="16" 
                          Padding="10">
                    <StackPanel Margin="10">
                        <!-- Name Input -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Name:" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBox Name="NameTextBox" 
                                     FontSize="14" 
                                     Padding="5" 
                                     TextChanged="NameTextBox_TextChanged"
                                     MaxLength="20"/>
                        </StackPanel>
                        
                        <!-- Age Input -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Alter:" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBox Name="AgeTextBox" 
                                     FontSize="14" 
                                     Padding="5" 
                                     TextChanged="AgeTextBox_TextChanged"
                                     MaxLength="2"/>
                        </StackPanel>
                        
                        <!-- Class Input -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Klasse:" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBox Name="ClassTextBox" 
                                     FontSize="14" 
                                     Padding="5" 
                                     TextChanged="ClassTextBox_TextChanged"
                                     MaxLength="2">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <TextBlock Name="ClassToolTipText" 
                                                   Text="Gib eine Klasse zwischen 1 und 13 ein"/>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                        </StackPanel>
                        
                        <!-- Current Selection Info -->
                        <GroupBox Header="ðŸŽ¯ Aktuelle Auswahl" 
                                  FontWeight="Bold" 
                                  FontSize="12" 
                                  Margin="0,0,0,20">
                            <StackPanel Margin="5">
                                <TextBlock Name="SelectedCategoryText" 
                                           Text="Kategorie: -" 
                                           FontSize="12" 
                                           Margin="0,2"/>
                                <TextBlock Name="SelectedCharacterText" 
                                           Text="Charakter: -" 
                                           FontSize="12" 
                                           Margin="0,2"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Save Button -->
                        <Button Name="SaveCharacterButton" 
                                Content="ðŸ’¾ Charakter speichern" 
                                Width="200" 
                                Height="50" 
                                FontSize="16" 
                                FontWeight="Bold"
                                Background="#32CD32" 
                                Foreground="White"
                                BorderThickness="0"
                                Click="SaveCharacterButton_Click"
                                Cursor="Hand"
                                IsEnabled="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="10" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#228B22"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#006400"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#CCCCCC"/>
                                                        <Setter Property="Foreground" Value="#666666"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>
        
        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20,0,20,20">
            <Button Name="BackButton" 
                    Content="â¬…ï¸ ZurÃ¼ck" 
                    Width="120" 
                    Height="40" 
                    FontSize="14" 
                    FontWeight="Bold"
                    Background="#4682B4" 
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Click="BackButton_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#36648B"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="EnglishLearnGame.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lade Einstellungen - English Learning Game" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F8FF"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Border CornerRadius="10" Background="#F0F8FF" BorderBrush="#4682B4" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="⚙️ Lade Einstellungen" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2E8B57" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Bitte warten..." 
                           FontSize="14" 
                           Foreground="#4682B4" 
                           Margin="0,5,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Loading Content -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Loading Animation -->
                <Border Width="60" Height="60" 
                        Background="#32CD32" 
                        CornerRadius="30"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                    <Border.RenderTransform>
                        <RotateTransform x:Name="LoadingRotation" Angle="0"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <TextBlock Text="📚" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Status Messages -->
                <TextBlock Name="StatusText" 
                           Text="Initialisiere Spiel..." 
                           FontSize="16" 
                           Foreground="#2E8B57" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <TextBlock Name="DetailText" 
                           Text="Lade Charakter-Einstellungen..." 
                           FontSize="12" 
                           Foreground="#4682B4" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Progress Bar -->
            <Grid Grid.Row="2">
                <StackPanel>
                    <TextBlock Name="ProgressText" 
                               Text="0%" 
                               FontSize="12" 
                               Foreground="#4682B4" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <ProgressBar Name="ProgressBar" 
                                 Height="8" 
                                 Background="#E0E0E0"
                                 Foreground="#32CD32"
                                 BorderThickness="0"
                                 Value="0"
                                 Maximum="100">
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Setter Property="Template">
                                    <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    BorderThickness="0"/>
                                            <Border Background="{TemplateBinding Foreground}" 
                                                    CornerRadius="4" 
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value}"/>
                                        </Grid>
                                    </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

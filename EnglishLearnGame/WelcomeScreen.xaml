<Window x:Class="EnglishLearnGame.WelcomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="English Learning Game - Welcome" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F8FF">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ðŸŽ“ English Learning Game" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="#2E8B57" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <TextBlock Text="Willkommen zum Englisch-Lernspiel!" 
                       FontSize="24" 
                       Foreground="#4682B4" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>
            
            <TextBlock Text="Verbessere dein Englisch von A1 bis C2 Level" 
                       FontSize="16" 
                       Foreground="#708090" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
        </StackPanel>
        
        <!-- Button Section -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="StartButton" 
                    Content="ðŸš€ Start" 
                    Width="200" 
                    Height="60" 
                    FontSize="18" 
                    FontWeight="Bold"
                    Background="#32CD32" 
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,15"
                    Click="StartButton_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#228B22"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#006400"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Character Info Display (only shown when single save file exists) -->
            <StackPanel Name="CharacterInfoPanel" 
                        Visibility="Collapsed" 
                        HorizontalAlignment="Center" 
                        Margin="0,10,0,0">
                <TextBlock Name="CharacterNameDisplay" 
                           Text="" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#2E8B57" 
                           HorizontalAlignment="Center"/>
                <TextBlock Name="CharacterDetailsDisplay" 
                           Text="" 
                           FontSize="14" 
                           Foreground="#4682B4" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- New Character Button (only shown when multiple save files exist) -->
            <Button Name="NewCharacterButton" 
                    Content="âž• Neu" 
                    Width="200" 
                    Height="50" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Background="#FF8C00" 
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,15"
                    Click="NewCharacterButton_Click"
                    Visibility="Collapsed"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF7F00"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FF6600"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Name="SettingsButton" 
                    Content="âš™ï¸ Einstellungen" 
                    Width="200" 
                    Height="60" 
                    FontSize="18" 
                    FontWeight="Bold"
                    Background="#4682B4" 
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,15"
                    Click="SettingsButton_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#36648B"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#2F4F4F"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Name="ExitButton" 
                    Content="âŒ Beenden" 
                    Width="200" 
                    Height="60" 
                    FontSize="18" 
                    FontWeight="Bold"
                    Background="#DC143C" 
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,15"
                    Click="ExitButton_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#B22222"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#8B0000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <!-- Footer Section -->
        <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="FÃ¼r GrundschÃ¼ler und weiterfÃ¼hrende Schulen" 
                       FontSize="14" 
                       Foreground="#708090" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Level: A1 (Basic) bis C2 (Experte)" 
                       FontSize="12" 
                       Foreground="#A9A9A9" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

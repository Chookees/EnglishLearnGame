<Window x:Class="EnglishLearnGame.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lade Einstellungen - English Learning Game" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F8FF"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Border CornerRadius="10" Background="#F0F8FF" BorderBrush="#4682B4" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="⚙️ Lade Einstellungen" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2E8B57" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Bitte warten..." 
                           FontSize="14" 
                           Foreground="#4682B4" 
                           Margin="0,5,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Loading Content -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Windows 11 Style Loading Animation -->
                <Canvas Width="100" Height="100" Margin="0,0,0,20">
                    <!-- Dot 1 - positioned at different angles -->
                    <Ellipse Width="8" Height="8" 
                             Fill="#0078D4" 
                             Canvas.Left="46" Canvas.Top="46">
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform x:Name="Dot1Translate" X="0" Y="0"/>
                                <ScaleTransform x:Name="Dot1Scale" ScaleX="1" ScaleY="1"/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Dot 2 -->
                    <Ellipse Width="8" Height="8" 
                             Fill="#0078D4" 
                             Canvas.Left="46" Canvas.Top="46">
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform x:Name="Dot2Translate" X="0" Y="0"/>
                                <ScaleTransform x:Name="Dot2Scale" ScaleX="1" ScaleY="1"/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Dot 3 -->
                    <Ellipse Width="8" Height="8" 
                             Fill="#0078D4" 
                             Canvas.Left="46" Canvas.Top="46">
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform x:Name="Dot3Translate" X="0" Y="0"/>
                                <ScaleTransform x:Name="Dot3Scale" ScaleX="1" ScaleY="1"/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Dot 4 -->
                    <Ellipse Width="8" Height="8" 
                             Fill="#0078D4" 
                             Canvas.Left="46" Canvas.Top="46">
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform x:Name="Dot4Translate" X="0" Y="0"/>
                                <ScaleTransform x:Name="Dot4Scale" ScaleX="1" ScaleY="1"/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Dot 5 -->
                    <Ellipse Width="8" Height="8" 
                             Fill="#0078D4" 
                             Canvas.Left="46" Canvas.Top="46">
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform x:Name="Dot5Translate" X="0" Y="0"/>
                                <ScaleTransform x:Name="Dot5Scale" ScaleX="1" ScaleY="1"/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Dot 6 -->
                    <Ellipse Width="8" Height="8" 
                             Fill="#0078D4" 
                             Canvas.Left="46" Canvas.Top="46">
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform x:Name="Dot6Translate" X="0" Y="0"/>
                                <ScaleTransform x:Name="Dot6Scale" ScaleX="1" ScaleY="1"/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Central dot -->
                    <Ellipse Width="10" Height="10" 
                             Fill="#106EBE" 
                             Canvas.Left="45" Canvas.Top="45">
                        <Ellipse.RenderTransform>
                            <ScaleTransform x:Name="CentralScale" ScaleX="1" ScaleY="1"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Animation Triggers -->
                    <Canvas.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <!-- Central pulsing -->
                                    <DoubleAnimation Storyboard.TargetName="CentralScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="1" To="1.2" Duration="0:0:0.8"
                                                     AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="CentralScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="1" To="1.2" Duration="0:0:0.8"
                                                     AutoReverse="True"/>
                                    
                                    <!-- Dot 1 - 0° -->
                                    <DoubleAnimation Storyboard.TargetName="Dot1Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="20" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.0"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot1Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="20" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.5"/>
                                    
                                    <!-- Dot 2 - 60° -->
                                    <DoubleAnimation Storyboard.TargetName="Dot2Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="10" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot2Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="-17" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot2Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="10" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.6"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot2Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="-17" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.6"/>
                                    
                                    <!-- Dot 3 - 120° -->
                                    <DoubleAnimation Storyboard.TargetName="Dot3Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="-10" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot3Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="-17" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot3Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="-10" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.7"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot3Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="-17" To="0" Duration="0:0:0.7"/>
                                    
                                    <!-- Dot 4 - 180° -->
                                    <DoubleAnimation Storyboard.TargetName="Dot4Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="-20" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.3"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot4Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="-20" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.8"/>
                                    
                                    <!-- Dot 5 - 240° -->
                                    <DoubleAnimation Storyboard.TargetName="Dot5Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="-10" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.4"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot5Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="17" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.4"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot5Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="-10" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.9"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot5Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="17" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.9"/>
                                    
                                    <!-- Dot 6 - 300° -->
                                    <DoubleAnimation Storyboard.TargetName="Dot6Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="10" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.5"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot6Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="17" Duration="0:0:0.5"
                                                     BeginTime="0:0:0.5"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot6Translate"
                                                     Storyboard.TargetProperty="X"
                                                     From="10" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:1.0"/>
                                    <DoubleAnimation Storyboard.TargetName="Dot6Translate"
                                                     Storyboard.TargetProperty="Y"
                                                     From="17" To="0" Duration="0:0:0.5"
                                                     BeginTime="0:0:1.0"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Canvas.Triggers>
                </Canvas>
                
                <!-- Status Messages -->
                <TextBlock Name="StatusText" 
                           Text="Initialisiere Spiel..." 
                           FontSize="16" 
                           Foreground="#2E8B57" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <TextBlock Name="DetailText" 
                           Text="Lade Charakter-Einstellungen..." 
                           FontSize="12" 
                           Foreground="#4682B4" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Progress Bar -->
            <Grid Grid.Row="2">
                <StackPanel>
                    <TextBlock Name="ProgressText" 
                               Text="0%" 
                               FontSize="12" 
                               Foreground="#4682B4" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <ProgressBar Name="ProgressBar" 
                                 Height="8" 
                                 Background="#E0E0E0"
                                 Foreground="#32CD32"
                                 BorderThickness="0"
                                 Value="0"
                                 Maximum="100">
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Setter Property="Template">
                                    <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    BorderThickness="0"/>
                                            <Border Background="{TemplateBinding Foreground}" 
                                                    CornerRadius="4" 
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value}"/>
                                        </Grid>
                                    </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

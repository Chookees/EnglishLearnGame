<Window x:Class="EnglishLearnGame.MainGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vokabel-Test - English Learning Game" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F8FF">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header mit Fortschritt -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Titel -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📚 Vokabel-Test" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#2E8B57"/>
                    <TextBlock Name="DifficultyText" 
                               Text="Schwierigkeitsstufe: A1" 
                               FontSize="16" 
                               Foreground="#4682B4"/>
                </StackPanel>
                
                <!-- Fortschritt -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Name="ProgressText" 
                               Text="0 / 0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#32CD32" 
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="richtige Übersetzungen" 
                               FontSize="12" 
                               Foreground="#4682B4" 
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Vokabel-Test Bereich -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <GroupBox Header="🎯 Übersetze das Wort" 
                          FontWeight="Bold" 
                          FontSize="16" 
                          Padding="15">
                    <StackPanel>
                        <!-- Wort-Anzeige -->
                        <Border Background="White" 
                                BorderBrush="#4682B4" 
                                BorderThickness="2" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="0,0,0,20">
                            <TextBlock Name="WordText" 
                                       Text="Lade Vokabel..." 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="#2E8B57" 
                                       HorizontalAlignment="Center"/>
                        </Border>
                        
                        <!-- Eingabe -->
                        <StackPanel>
                            <TextBlock Text="Deine Übersetzung:" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>
                            <TextBox Name="AnswerTextBox" 
                                     FontSize="18" 
                                     Padding="10" 
                                     Height="50"
                                     TextChanged="AnswerTextBox_TextChanged"
                                     KeyDown="AnswerTextBox_KeyDown"
                                     GotFocus="AnswerTextBox_GotFocus">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="5"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Focusable="false" 
                                                              HorizontalScrollBarVisibility="Hidden" 
                                                              VerticalScrollBarVisibility="Hidden"/>
                                            </Grid>
                                        </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                        
                        <!-- Antwort-Button -->
                        <Button Name="CheckButton" 
                                Content="✅ Prüfen" 
                                Width="200" 
                                Height="50" 
                                FontSize="16" 
                                FontWeight="Bold"
                                Background="#32CD32" 
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,20,0,0"
                                Click="CheckButton_Click"
                                Cursor="Hand"
                                IsEnabled="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="10" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#228B22"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#006400"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- Feedback -->
                        <TextBlock Name="FeedbackText" 
                                   Text="" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,15,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            
            <!-- Charakter-Info -->
            <StackPanel Grid.Column="1">
                <GroupBox Header="👤 Dein Charakter" 
                          FontWeight="Bold" 
                          FontSize="14" 
                          Padding="10">
                    <StackPanel>
                        <!-- Charakter-Bild -->
                        <Grid Height="150" Background="White" Margin="0,0,0,15">
                            <Image Name="CharacterImage" 
                                   Width="120" 
                                   Height="120" 
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Charakter-Details -->
                        <StackPanel>
                            <TextBlock Name="CharacterNameText" 
                                       Text="Name" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#2E8B57"/>
                            <TextBlock Name="CharacterDetailsText" 
                                       Text="Alter | Klasse" 
                                       FontSize="12" 
                                       Foreground="#4682B4" 
                                       Margin="0,5,0,15"/>
                            
                            <!-- Statistiken -->
                            <TextBlock Text="📊 Statistiken" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#2E8B57" 
                                       Margin="0,0,0,10"/>
                            
                            <StackPanel Name="StatsPanel">
                                <!-- Statistiken werden dynamisch geladen -->
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Kontrollen -->
                <StackPanel Margin="0,20,0,0">
                    <Button Name="SettingsButton" 
                            Content="⚙️ Einstellungen" 
                            Width="250" 
                            Height="40" 
                            FontSize="14" 
                            FontWeight="Bold"
                            Background="#4682B4" 
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,0,10"
                            Click="SettingsButton_Click"
                            Cursor="Hand"/>
                    
                    <Button Name="BackButton" 
                            Content="⬅️ Zurück zum Menü" 
                            Width="250" 
                            Height="40" 
                            FontSize="14" 
                            FontWeight="Bold"
                            Background="#A9A9A9" 
                            Foreground="White"
                            BorderThickness="0"
                            Click="BackButton_Click"
                            Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- Bottom Status -->
        <Border Grid.Row="2" 
                Background="#E8F4F8" 
                BorderBrush="#4682B4" 
                BorderThickness="0,1,0,0">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Name="StatusText" 
                           Text="Bereit zum Lernen!" 
                           FontSize="12" 
                           Foreground="#4682B4" 
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Name="TimeText" 
                               Text="00:00" 
                               FontSize="12" 
                               Foreground="#4682B4" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Name="StreakText" 
                               Text="🔥 0" 
                               FontSize="12" 
                               Foreground="#FF6B35" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
